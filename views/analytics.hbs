<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>Analytics Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div class="container mt-5">
    <!-- Back Link -->
    <a href="/url-shortener" class="btn btn-primary mb-4">Back to URL Shortener</a>

    <h1 class="mb-4">Analytics Table</h1>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>URL</th>
          <th>Total Hits</th>
        </tr>

      </thead>
      <tbody id="analyticsTableBody">
        <!-- Data rows will be inserted here dynamically -->
      </tbody>
    </table>
    <h6 id="loading" class="d-flex justify-content-center">Loading..</h6>
  </div>

  <script>
    var isLoading = true
    // fetch analytics
    function fetchAnalytics() {
      fetch('/analytics/user-analytics')
        .then(res => res.json())
        .then(data => {
          const tableBody = document.getElementById('analyticsTableBody');

          tableBody.innerHTML = data.map((item, index) => `
            <tr>
              <td>${index + 1}</td>
              <td>${item.url}</td>
              <td>${item.click_count}</td>
            </tr>
          `).join('');
        })
        .catch(err => {
          console.error('Error fetching analytics:', err);
        }).finally(res => {
          // hide loading...
          const isLoadingEl=document.getElementById('loading');
          if(isLoadingEl){
            isLoadingEl.style.visibility='hidden'
          }
        });
    }

    fetchAnalytics();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>
